<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/front_page_gradient_bg"
    android:padding="32dp"
    android:gravity="center">

    <!-- App Logo with Gradient Background -->
    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/app_logo"
        android:elevation="8dp"/>

    <!-- App Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Serenity"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/app_name_color"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="8dp" />

    <!-- Tagline -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your path to emotional balance"
        android:textSize="16sp"
        android:textColor="@color/tagline_color"
        android:layout_marginBottom="16dp" />



    <!-- Welcome Message -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to a calmer you"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/welcome_text_color"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="16dp" />

    <!-- Feature List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="32dp">

        <!-- Feature 1: Heart -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_heart_outline"
                android:contentDescription="Heart icon"
                app:tint="@color/feature_icon_color"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="❤ Manage stress and anger effectively"
                android:textColor="#333333"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Feature 2: Leaf -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_leaf_outline"
                android:contentDescription="Leaf icon"
                app:tint="@color/feature_icon_color"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🌿Learn proven relaxation techniques"
                android:textColor="#333333"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Feature 3: Chart -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_trending_up"
                android:tint="#6366F1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📊 Track your emotional progress"
                android:textColor="#333333"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Call-to-Action Button -->
    <Button
        android:id="@+id/btn_begin"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Begin Your Journey"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/cta_button_gradient"
        android:backgroundTint="@null"
        android:minHeight="0dp"
        android:paddingHorizontal="24dp"
        android:layout_marginBottom="12dp"
        android:focusable="true"
        android:clickable="true"
        android:onClick="onBeginButtonClick" />

    <!-- Bottom Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join thousands finding their inner peace"
        android:textSize="13sp"
        android:textColor="@color/bottom_text_color"
        android:fontFamily="sans-serif" />

</LinearLayout>