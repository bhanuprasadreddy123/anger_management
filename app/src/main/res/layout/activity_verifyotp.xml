<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/btnBackArrow"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_arrow_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back"
        android:tint="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Verification Code"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btnBackArrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Subtext -->
    <TextView
        android:id="@+id/tvSubtext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="We have sent a verification code to ********@gmail.com"
        android:textColor="#666666"
        android:textSize="16sp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

    <!-- OTP Input Container -->
    <LinearLayout
        android:id="@+id/otpContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvSubtext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp">

        <!-- OTP Box 1 -->
        <EditText
            android:id="@+id/otp1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/input_field_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:hint="•"
            android:textColorHint="#CCCCCC"
            android:cursorVisible="true"
            android:selectAllOnFocus="true"
            android:minWidth="48dp" />

        <!-- OTP Box 2 -->
        <EditText
            android:id="@+id/otp2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/input_field_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:hint="•"
            android:textColorHint="#CCCCCC"
            android:cursorVisible="true"
            android:selectAllOnFocus="true"
            android:minWidth="48dp" />

        <!-- OTP Box 3 -->
        <EditText
            android:id="@+id/otp3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/input_field_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:hint="•"
            android:textColorHint="#CCCCCC"
            android:cursorVisible="true"
            android:selectAllOnFocus="true"
            android:minWidth="48dp" />

        <!-- OTP Box 4 -->
        <EditText
            android:id="@+id/otp4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/input_field_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:hint="•"
            android:textColorHint="#CCCCCC"
            android:cursorVisible="true"
            android:selectAllOnFocus="true"
            android:minWidth="48dp" />

        <!-- OTP Box 5 -->
        <EditText
            android:id="@+id/otp5"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/input_field_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:hint="•"
            android:textColorHint="#CCCCCC"
            android:cursorVisible="true"
            android:selectAllOnFocus="true"
            android:minWidth="48dp" />

        <!-- OTP Box 6 -->
        <EditText
            android:id="@+id/otp6"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/input_field_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:hint="•"
            android:textColorHint="#CCCCCC"
            android:cursorVisible="true"
            android:selectAllOnFocus="true"
            android:minWidth="48dp" />

    </LinearLayout>

    <!-- Countdown -->
    <TextView
        android:id="@+id/tvCountdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code expires in: 02:59"
        android:textColor="#666666"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/otpContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Verify Button -->
    <Button
        android:id="@+id/btnverify"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Verify"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/cta_button_gradient"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/tvCountdown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Back Button -->
    <Button
        android:id="@+id/iv_back"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Back"
        android:textSize="18sp"
        android:backgroundTint="#666666"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/btnverify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>