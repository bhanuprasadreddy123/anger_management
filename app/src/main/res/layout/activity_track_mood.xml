                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/mood_card_background"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <!-- Left Color Bar -->
                    <View
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="#F59E0B"
                        android:layout_marginEnd="16dp" />

                    <!-- Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Mood Name and Intensity -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Irritated"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#1F2937"
                                android:fontFamily="sans-serif-medium" />

                            <!-- Intensity Dots -->
                            <LinearLayout
                                android:id="@+id/dots_irritated"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <View
                                    android:id="@+id/dot_irritated_1"
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/dot_active"
                                    android:layout_marginEnd="4dp"
                                    android:clickable="true"
                                    android:focusable="true" />
                                <View
                                    android:id="@+id/dot_irritated_2"
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/dot_active"
                                    android:layout_marginEnd="4dp"
                                    android:clickable="true"
                                    android:focusable="true" />
                                <View
                                    android:id="@+id/dot_irritated_3"
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/dot_active"
                                    android:layout_marginEnd="4dp"
                                    android:clickable="true"
                                    android:focusable="true" />
                                <View
                                    android:id="@+id/dot_irritated_4"
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/dot_inactive"
                                    android:layout_marginEnd="4dp"
                                    android:clickable="true"
                                    android:focusable="true" />
                                <View
                                    android:id="@+id/dot_irritated_5"
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/dot_inactive"
                                    android:clickable="true"
                                    android:focusable="true" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Note Option -->
                        <LinearLayout
                            android:id="@+id/note_irritated"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackgroundBorderless">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_edit"
                                android:contentDescription="Edit"
                                android:layout_marginEnd="8dp"
                                android:tint="#9CA3AF" />

                            <TextView
                                android:id="@+id/tv_note_irritated"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Add note..."
                                android:textSize="14sp"
                                android:textColor="#9CA3AF"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Just now"
                                android:textSize="12sp"
                                android:textColor="#9CA3AF"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Frustrated Card -->
                <LinearLayout
                    android:id="@+id/card_frustrated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/mood_card_background"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <!-- Left Color Bar -->
                    <View
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="#3B82F6"
                        android:layout_marginEnd="16dp" />

                    <!-- Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Mood Name and Intensity -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Frustrated"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#1F2937"
                                android:fontFamily="sans-serif-medium" />

                            <!-- Intensity Dots -->
                            <LinearLayout
                                android:id="@+id/dots_frustrated"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <View
                                    android:id="@+id/dot_frustrated_1"
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/dot_active"
                                    android:layout_marginEnd="4dp"
                                    android:clickable="true"
                                    android:focusable="true" />
                                <View
                                    android:id="@+id/dot_frustrated_2"
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/dot_active"
                                    android:layout_marginEnd="4dp"
                                    android:clickable="true"
                                    android:focusable="true" />
                                <View
                                    android:id="@+id/dot_frustrated_3"
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/dot_active"
                                    android:layout_marginEnd="4dp"
                                    android:clickable="true"
                                    android:focusable="true" />
                                <View
                                    android:id="@+id/dot_frustrated_4"
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/dot_inactive"
                                    android:layout_marginEnd="4dp"
                                    android:clickable="true"
                                    android:focusable="true" />
                                <View
                                    android:id="@+id/dot_frustrated_5"
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/dot_inactive"
                                    android:clickable="true"
                                    android:focusable="true" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Note Option -->
                        <LinearLayout
                            android:id="@+id/note_frustrated"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackgroundBorderless">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_edit"
                                android:contentDescription="Edit"
                                android:layout_marginEnd="8dp"
                                android:tint="#9CA3AF" />

                            <TextView
                                android:id="@+id/tv_note_frustrated"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Add note..."
                                android:textSize="14sp"
                                android:textColor="#9CA3AF"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Just now"
                                android:textSize="12sp"
                                android:textColor="#9CA3AF"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Angry Card -->
                <LinearLayout
                    android:id="@+id/card_angry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/mood_card_background"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <!-- Left Color Bar -->
                    <View
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="#EF4444"
                        android:layout_marginEnd="16dp" />

                    <!-- Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Mood Name and Intensity -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Angry"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#1F2937"
                                android:fontFamily="sans-serif-medium" />

                            <!-- Intensity Dots -->
                            <LinearLayout
                                android:id="@+id/dots_angry"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <View
                                    android:id="@+id/dot_angry_1"
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/dot_active"
                                    android:layout_marginEnd="4dp"
                                    android:clickable="true"
                                    android:focusable="true" />
                                <View
                                    android:id="@+id/dot_angry_2"
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/dot_active"
                                    android:layout_marginEnd="4dp"
                                    android:clickable="true"
                                    android:focusable="true" />
                                <View
                                    android:id="@+id/dot_angry_3"
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/dot_active"
                                    android:layout_marginEnd="4dp"
                                    android:clickable="true"
                                    android:focusable="true" />
                                <View
                                    android:id="@+id/dot_angry_4"
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/dot_inactive"
                                    android:layout_marginEnd="4dp"
                                    android:clickable="true"
                                    android:focusable="true" />
                                <View
                                    android:id="@+id/dot_angry_5"
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/dot_inactive"
                                    android:clickable="true"
                                    android:focusable="true" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Note Option -->
                        <LinearLayout
                            android:id="@+id/note_angry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackgroundBorderless">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_edit"
                                android:contentDescription="Edit"
                                android:layout_marginEnd="8dp"
                                android:tint="#9CA3AF" />

                            <TextView
                                android:id="@+id/tv_note_angry"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Add note..."
                                android:textSize="14sp"
                                android:textColor="#9CA3AF"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Just now"
                                android:textSize="12sp"
                                android:textColor="#9CA3AF"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>



            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save_mood"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Save Mood"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                app:backgroundTint="#3B82F6"
                app:cornerRadius="12dp"
                android:layout_marginTop="32dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout> 