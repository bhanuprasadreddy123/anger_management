<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Track Your Mood"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:gravity="center"
            android:fontFamily="sans-serif-medium" />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Mood Prompt -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How are you feeling right now?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#374151"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_current_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tuesday, 2:30 PM"
                android:textSize="16sp"
                android:textColor="#9CA3AF"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="32dp" />

            <!-- Mood Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Calm Card -->
                <LinearLayout
                    android:id="@+id/card_calm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/mood_card_background"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <!-- Left Color Bar -->
                    <View
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="#10B981"
                        android:layout_marginEnd="16dp" />

                    <!-- Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Mood Name and Intensity -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Calm"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#1F2937"
                                android:fontFamily="sans-serif-medium" />

                            <!-- Intensity Dots -->
                            <LinearLayout
                                android:id="@+id/dots_calm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <View
                                    android:id="@+id/dot_calm_1"
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/dot_active"
                                    android:layout_marginEnd="4dp"
                                    android:clickable="true"
                                    android:focusable="true" />
                                <View
                                    android:id="@+id/dot_calm_2"
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/dot_active"
                                    android:layout_marginEnd="4dp"
                                    android:clickable="true"
                                    android:focusable="true" />
                                <View
                                    android:id="@+id/dot_calm_3"
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/dot_active"
                                    android:layout_marginEnd="4dp"
                                    android:clickable="true"
                                    android:focusable="true" />
                                <View
                                    android:id="@+id/dot_calm_4"
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/dot_inactive"
                                    android:layout_marginEnd="4dp"
                                    android:clickable="true"
                                    android:focusable="true" />
                                <View
                                    android:id="@+id/dot_calm_5"
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/dot_inactive"
                                    android:clickable="true"
                                    android:focusable="true" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Note Option -->
                        <LinearLayout
                            android:id="@+id/note_calm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackgroundBorderless">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_edit"
                                android:contentDescription="Edit"
                                android:layout_marginEnd="8dp"
                                android:tint="#9CA3AF" />

                            <TextView
                                android:id="@+id/tv_note_calm"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Add note..."
                                android:textSize="14sp"
                                android:textColor="#9CA3AF"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Just now"
                                android:textSize="12sp"
                                android:textColor="#9CA3AF"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Irritated Card -->
                <LinearLayout
