<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="20dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gratitude Journal"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Focus on what's going well"
                android:textSize="16sp"
                android:textColor="#6B7280"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Inspiration Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/card_background"
        android:padding="20dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="âœ¨"
            android:textSize="32sp"
            android:gravity="center"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shift Your Focus"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Even in difficult moments, there are things to be grateful for. Let's find them together."
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Gratitude Form -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What's going right today"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp" />

            <!-- Gratitude Item 1 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. I'm grateful for my good health, loving family, and supportive friends."
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#3B82F6"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_gratitude_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g., my health, a good night's sleep, a kind message from a friend"
                android:background="@drawable/input_field_background"
                android:padding="16dp"
                android:textSize="16sp"
                android:minLines="2"
                android:gravity="top"
                android:layout_marginBottom="20dp" />

            <!-- Gratitude Item 2 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. I appreciate the kindness of others"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#3B82F6"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_gratitude_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g., my ability to learn, the support around me, small moments of joy"
                android:background="@drawable/input_field_background"
                android:padding="16dp"
                android:textSize="16sp"
                android:minLines="2"
                android:gravity="top"
                android:layout_marginBottom="20dp" />

            <!-- Gratitude Item 3 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. I'm thankful for the food I eat, the home I live in"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#3B82F6"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_gratitude_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g., challenges that help me grow, the beauty around me, my inner strength"
                android:background="@drawable/input_field_background"
                android:padding="16dp"
                android:textSize="16sp"
                android:minLines="2"
                android:gravity="top"
                android:layout_marginBottom="24dp" />

            <!-- Tips Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_button_bg_stroke"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Tips for Gratitude"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_gratitude_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Think of simple, everyday things\nâ€¢ Consider people who support you\nâ€¢ Reflect on your strengths and abilities\nâ€¢ Remember moments of joy or peace\nâ€¢ Acknowledge your progress and growth"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_gratitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save &amp; Reflect"
            android:textSize="16sp"
            android:background="@drawable/cta_button_gradient"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"
            android:padding="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_share_gratitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Share"
            android:textSize="16sp"
            android:background="@drawable/rounded_button_bg_stroke"
            android:textColor="#3B82F6"
            android:layout_marginStart="8dp"
            android:padding="16dp" />
    </LinearLayout>

</LinearLayout> 