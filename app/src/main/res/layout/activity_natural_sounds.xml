<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/front_page_gradient_bg">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="#FFFFFF"
            android:clickable="true"
            android:focusable="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Natural Sounds"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35+ calming nature sounds for anger management"
                android:textSize="14sp"
                android:textColor="#E5E7EB" />
        </LinearLayout>
    </LinearLayout>

    <!-- Introduction Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#F9FAFB">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŒ¿ Nature's Healing Power"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Immerse yourself in the soothing sounds of nature. From gentle ocean waves to peaceful forest rain, these natural sounds are scientifically proven to reduce stress, lower blood pressure, and help manage anger. Choose from 35 carefully curated natural sound videos to find your perfect moment of calm."
            android:textSize="14sp"
            android:textColor="#6B7280"
            android:lineSpacingExtra="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ Tip: Use these sounds during meditation, before sleep, or whenever you need to find your center."
            android:textSize="12sp"
            android:textColor="#3B82F6"
            android:layout_marginTop="12dp"
            android:background="#EFF6FF"
            android:padding="8dp"
            android:drawablePadding="8dp" />
    </LinearLayout>

    <!-- Natural Sounds List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_sounds"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:clipToPadding="false" />

</LinearLayout> 