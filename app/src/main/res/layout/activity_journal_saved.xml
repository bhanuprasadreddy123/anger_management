<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:gravity="center">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Journal Saved"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:gravity="center"
            android:fontFamily="sans-serif-medium" />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </LinearLayout>

    <!-- Success Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Success Icon -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_check_circle"
            android:contentDescription="Success"
            android:layout_marginBottom="24dp"
            app:tint="#10B981" />

        <!-- Success Message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Journal Entry Saved!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your thoughts have been successfully saved. Keep writing to track your emotional journey."
            android:textSize="16sp"
            android:textColor="#6B7280"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Journal Summary -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F3F4F6"
            android:padding="16dp"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Journal Summary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tv_journal_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: Today"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_journal_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time: 2:30 PM"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_journal_mood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mood: Calm"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_journal_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preview: Your journal entry preview..."
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_new_entry"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Write New Entry"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#3B82F6"
                app:cornerRadius="8dp"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_journals"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="View All Journals"
                android:textSize="16sp"
                android:textColor="#3B82F6"
                android:backgroundTint="#FFFFFF"
                app:cornerRadius="8dp"
                app:strokeColor="#3B82F6"
                app:strokeWidth="1dp"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_go_home"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Go to Home"
                android:textSize="16sp"
                android:textColor="#6B7280"
                android:backgroundTint="#F3F4F6"
                app:cornerRadius="8dp"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete_entry"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Delete This Entry"
                android:textSize="16sp"
                android:textColor="#EF4444"
                android:backgroundTint="#FFFFFF"
                app:cornerRadius="8dp"
                app:strokeColor="#EF4444"
                app:strokeWidth="1dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout> 