<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="4dp"
        android:contentDescription="Back"
        android:layout_marginBottom="32dp" />

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't worry, we'll help you reset it"
            android:textSize="16sp"
            android:textColor="#6B7280"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Email Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tv_email_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:textSize="14sp"
                android:textColor="#374151"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_email"
                app:endIconTint="#6B7280"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#E5E7EB"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Enter your registered email"
                    android:textSize="14dp"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Send Reset Link Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_send_reset_link"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="18dp"
            android:gravity="center"
            android:text="Send Reset Link"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#3B82F6"
            app:cornerRadius="8dp"
            android:layout_marginBottom="24dp" />

        <!-- Sign In Link -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <TextView
                android:id="@+id/tv_remember_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember your password? "
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/btn_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textSize="14sp"
                android:textColor="#3B82F6"
                android:fontFamily="sans-serif-medium"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

        <!-- Support Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#F9FAFB"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Question Mark Icon -->
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="#3B82F6">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_question_mark"
                        android:tint="#FFFFFF"
                        android:padding="8dp"
                        android:contentDescription="Question Mark" />
                </androidx.cardview.widget.CardView>

                <!-- Support Text -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_need_assistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Need assistance?"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_contact_support"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact our support team"
                        android:textSize="14sp"
                        android:textColor="#6B7280"
                        android:fontFamily="sans-serif"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/btn_support_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="support@mindpeace.com"
                        android:textSize="14sp"
                        android:textColor="#3B82F6"
                        android:fontFamily="sans-serif-medium"
                        android:padding="4dp"
                        android:background="?attr/selectableItemBackgroundBorderless" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Security Message -->
    <LinearLayout
        android:id="@+id/ll_security_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_security_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_lock"
            android:tint="#6B7280"
            android:layout_marginEnd="8dp"
            android:contentDescription="Security" />

        <TextView
            android:id="@+id/tv_security_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We'll send a secure password reset link to your email"
            android:textSize="12sp"
            android:textColor="#6B7280"
            android:fontFamily="sans-serif"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>