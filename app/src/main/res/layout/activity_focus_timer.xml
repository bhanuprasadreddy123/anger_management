<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/focus_background"
    tools:context=".FocusTimerActivity">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="24dp"
        android:paddingTop="32dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back button"
            android:focusable="true"
            android:clickable="true"
            app:tint="@color/focus_text_primary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Focus Timer"
            android:textColor="@color/focus_text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:gravity="center" />

        <!-- Empty space to balance the back button -->
        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />

    </LinearLayout>

    <!-- Timer Circle Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="48dp">

        <FrameLayout
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:background="@drawable/focus_timer_circle_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:text="05:00"
                    android:textColor="@color/focus_text_primary"
                    android:textSize="48sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Time Remaining"
                    android:textColor="@color/focus_text_secondary"
                    android:textSize="16sp" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <!-- Activity Selection Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        android:layout_marginBottom="48dp">

        <Button
            android:id="@+id/btnBreathing"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Breathing"
            android:gravity="center"
            android:textColor="@color/focus_button_selected_text"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/focus_button_selected_bg"
            android:backgroundTint="@null"
            android:minHeight="0dp"
            android:paddingHorizontal="16dp"
            android:focusable="true"
            android:clickable="true" />

        <Button
            android:id="@+id/btnCoolDown"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Cool Down"
            android:gravity="center"
            android:textColor="@color/focus_button_unselected_text"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/focus_button_unselected_bg"
            android:backgroundTint="@null"
            android:minHeight="0dp"
            android:paddingHorizontal="16dp"
            android:focusable="true"
            android:clickable="true" />

        <Button
            android:id="@+id/btnMindfulness"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Mindfulness"
            android:gravity="center"
            android:textColor="@color/focus_button_unselected_text"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/focus_button_unselected_bg"
            android:backgroundTint="@null"
            android:minHeight="0dp"
            android:paddingHorizontal="16dp"
            android:focusable="true"
            android:clickable="true" />

    </LinearLayout>

    <!-- Control Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        android:layout_marginBottom="32dp">

        <ImageButton
            android:id="@+id/btnPlayPause"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/focus_play_button_bg"
            android:src="@drawable/ic_play_outline"
            android:contentDescription="Play/Pause"
            android:focusable="true"
            android:clickable="true"
            android:padding="20dp"
            app:tint="@color/focus_purple_dark" />

        <ImageButton
            android:id="@+id/btnReset"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="24dp"
            android:background="@drawable/focus_reset_button_bg"
            android:src="@drawable/ic_reset"
            android:contentDescription="Reset"
            android:focusable="true"
            android:clickable="true"
            android:padding="16dp"
            app:tint="@color/focus_text_primary" />

    </LinearLayout>

    <!-- Bottom Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>