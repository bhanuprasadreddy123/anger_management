<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="20dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reframe Perspective"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See your situation differently"
                android:textSize="16sp"
                android:textColor="#6B7280"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Inspiration Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/card_background"
        android:padding="20dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="🔄"
            android:textSize="32sp"
            android:gravity="center"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Your View"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Every situation can be seen from multiple angles. Let's find a more helpful perspective."
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Current Situation -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What's frustrating you right now?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/et_current_situation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Describe what's bothering you..."
                android:background="@drawable/input_field_background"
                android:padding="16dp"
                android:textSize="16sp"
                android:minLines="3"
                android:gravity="top"
                android:layout_marginBottom="24dp" />

            <!-- Reframe Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose a new perspective:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp" />

            <!-- Reframe Options -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Option 1: Temporary vs Permanent -->
                <LinearLayout
                    android:id="@+id/reframe_option_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🕐 This is temporary, not permanent"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Most frustrating situations are temporary. This too shall pass."
                        android:textSize="14sp"
                        android:textColor="#6B7280"
                        android:fontFamily="sans-serif"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Option 2: Learning Opportunity -->
                <LinearLayout
                    android:id="@+id/reframe_option_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📚 This is a learning opportunity"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Challenges help us grow stronger and wiser."
                        android:textSize="14sp"
                        android:textColor="#6B7280"
                        android:fontFamily="sans-serif"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Option 3: Not Personal -->
                <LinearLayout
                    android:id="@+id/reframe_option_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🎯 This isn't about me personally"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Often, frustrating situations aren't personal attacks."
                        android:textSize="14sp"
                        android:textColor="#6B7280"
                        android:fontFamily="sans-serif"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Option 4: Custom Reframe -->
                <LinearLayout
                    android:id="@+id/reframe_option_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✏️ Create my own reframe"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Write your own positive perspective."
                        android:textSize="14sp"
                        android:textColor="#6B7280"
                        android:fontFamily="sans-serif"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Custom Reframe Input (initially hidden) -->
            <LinearLayout
                android:id="@+id/custom_reframe_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your custom reframe:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#3B82F6"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_custom_reframe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Write your positive perspective..."
                    android:background="@drawable/input_field_background"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:minLines="2"
                    android:gravity="top" />
            </LinearLayout>

            <!-- Tips Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_button_bg_stroke"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💡 Reframing Tips"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_reframe_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Look for the silver lining\n• Consider what you can control\n• Think about what you're learning\n• Remember your strengths\n• Focus on solutions, not problems"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_reframe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save Reframe"
            android:textSize="16sp"
            android:background="@drawable/cta_button_gradient"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"
            android:padding="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_share_reframe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Share"
            android:textSize="16sp"
            android:background="@drawable/rounded_button_bg_stroke"
            android:textColor="#3B82F6"
            android:layout_marginStart="8dp"
            android:padding="16dp" />
    </LinearLayout>

</LinearLayout> 