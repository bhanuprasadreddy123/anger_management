<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Exercises"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:gravity="center" />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Move your body, clear your mind"
        android:textSize="14sp"
        android:textColor="#888888"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Progress Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="16dp">

        <!-- Circular Progress -->
        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:indicatorSize="56dp"
                app:indicatorInset="0dp"
                app:trackThickness="6dp"
                app:indicatorColor="#3B82F6"
                app:trackColor="#E5E7EB"
                android:progress="70"
                android:max="100" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="70%"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#3B82F6"
                android:gravity="center" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Progress"
                android:textSize="15sp"
                android:textColor="#222222"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="2dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_flame"
                    android:contentDescription="Streak"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 day streak"
                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Filter Chips -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginBottom="16dp"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="All"
                android:textColor="#FFFFFF"
                android:backgroundTint="#3B82F6"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@drawable/chip_selected" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Quick"
                android:textColor="#888888"
                android:backgroundTint="#F3F4F6"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@drawable/chip_unselected" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Calming"
                android:textColor="#888888"
                android:backgroundTint="#F3F4F6"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@drawable/chip_unselected" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Body"
                android:textColor="#888888"
                android:backgroundTint="#F3F4F6"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@drawable/chip_unselected" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Breathing"
                android:textColor="#888888"
                android:backgroundTint="#F3F4F6"
                android:textSize="14sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@drawable/chip_unselected" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Exercise List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Deep Breathing -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:background="@drawable/exercise_card_yellow"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deep Breathing"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#222222" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_clock"
                            android:contentDescription="Duration"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 min"
                            android:textSize="13sp"
                            android:textColor="#888888" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calming breathwork to reduce tension and anxiety"
                        android:textSize="13sp"
                        android:textColor="#888888" />
                </LinearLayout>

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_play"
                    android:background="@drawable/circle_play_button_bg"
                    android:padding="8dp"
                    android:contentDescription="Play" />
            </LinearLayout>

            <!-- Neck &amp; Shoulder Release -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:background="@drawable/exercise_card_blue"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Neck &amp; Shoulder Release"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#222222" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_clock"
                            android:contentDescription="Duration"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 min"
                            android:textSize="13sp"
                            android:textColor="#888888" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gentle stretches to relieve physical tension"
                        android:textSize="13sp"
                        android:textColor="#888888" />
                </LinearLayout>

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_play"
                    android:background="@drawable/circle_play_button_bg"
                    android:padding="8dp"
                    android:contentDescription="Play" />
            </LinearLayout>

            <!-- Mindful Walking -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:background="@drawable/exercise_card_green"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mindful Walking"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#222222" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_clock"
                            android:contentDescription="Duration"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 min"
                            android:textSize="13sp"
                            android:textColor="#888888" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grounding walk to center yourself and reduce stress"
                        android:textSize="13sp"
                        android:textColor="#888888" />
                </LinearLayout>

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_play"
                    android:background="@drawable/circle_play_button_bg"
                    android:padding="8dp"
                    android:contentDescription="Play" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E7EB" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Home -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    android:contentDescription="Home"
                    android:alpha="0.6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Exercises (Active) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_exercises"
                    android:contentDescription="Exercises"
                    android:tint="#3B82F6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exercises"
                    android:textSize="12sp"
                    android:textColor="#3B82F6"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Journal -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_meditation"
                    android:contentDescription="Journal"
                    android:alpha="0.6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Journal"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Profile -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_person"
                    android:contentDescription="Profile"
                    android:alpha="0.6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>