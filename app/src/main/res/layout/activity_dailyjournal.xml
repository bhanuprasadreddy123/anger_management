<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Daily Journal"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:gravity="center"
            android:fontFamily="sans-serif-medium" />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </LinearLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Date -->
        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuesday, July 15, 2025"
            android:textSize="16sp"
            android:textColor="#6B7280"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />

        <!-- Journal Entry Field -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:padding="16dp">

            <EditText
                android:id="@+id/journal_entry"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint=" Start writing your thoughts here..."
                android:background="@drawable/rounded_corner"
                android:textSize="16sp"
                android:textColor="#1F2937"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:fontFamily="sans-serif"
                android:scrollbars="vertical"
                android:paddingStart="40dp"
                android:paddingLeft="40dp" />

            <!-- Autosave Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Autosaved at 8:02 PM"
                android:textSize="12sp"
                android:textColor="#9CA3AF"
                android:fontFamily="sans-serif"
                android:layout_gravity="end"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Mood Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:background="#EFEFF6"
            android:padding="16dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How did you feel today?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp" />

            <!-- Feeling Names -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Peaceful &amp; Relaxed"
                    android:textSize="12sp"
                    android:textColor="#065F46"
                    android:gravity="center"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Slightly Annoyed"
                    android:textSize="12sp"
                    android:textColor="#92400E"
                    android:gravity="center"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Very Upset"
                    android:textSize="12sp"
                    android:textColor="#C2410C"
                    android:gravity="center"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Extremely Angry"
                    android:textSize="12sp"
                    android:textColor="#991B1B"
                    android:gravity="center"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <!-- Mood Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:gravity="center">

                <!-- Calm -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_calm"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Calm"
                    android:textSize="12sp"
                    android:textColor="#065F46"
                    app:backgroundTint="#90D3B9"
                    app:cornerRadius="20dp"
                    android:layout_marginEnd="4dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <!-- Irritated -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_irritated"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Irritated"
                    android:textSize="12sp"
                    android:textColor="#92400E"
                    app:backgroundTint="#FEF3C7"
                    app:cornerRadius="20dp"
                    android:layout_marginEnd="4dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <!-- Frustrated -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_frustrated"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Frustrated"
                    android:textSize="12sp"
                    android:textColor="#C2410C"
                    app:backgroundTint="#FED7AA"
                    app:cornerRadius="20dp"
                    android:layout_marginEnd="4dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <!-- Angry -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_angry"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Angry"
                    android:textSize="12sp"
                    android:textColor="#991B1B"
                    app:backgroundTint="#FEE2E2"
                    app:cornerRadius="20dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF">

        <!-- Save Journal Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_journal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Save Journal"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:backgroundTint="#149719"
            app:cornerRadius="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Clear Button -->
        <TextView
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:textSize="16sp"
            android:textColor="#1F2937"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>
</LinearLayout>