<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF3E0">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="2dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:tint="@color/text_primary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Loving Kindness Meditation"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center" />

        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- Meditation Circle -->
            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/circle_play_button_bg"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_meditation_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_loving_kindness"
                    android:tint="@android:color/white"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/tv_meditation_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loving Kindness"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="20dp" />
            </FrameLayout>

            <!-- Timer Display -->
            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00"
                android:textSize="48sp"
                android:textStyle="bold"
                android:textColor="#F57C00"
                android:layout_marginBottom="24dp" />

            <!-- Play/Pause Button -->
            <ImageButton
                android:id="@+id/btn_play_pause"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_play"
                android:background="@drawable/circle_play_button_bg"
                android:layout_marginBottom="32dp"
                android:scaleType="centerInside"
                android:tint="@android:color/white" />

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cultivate compassion and love for yourself and others with this heart-opening meditation practice."
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp" />

            <!-- Instructions -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Instructions"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1. Sit comfortably and close your eyes\n2. Place your hands over your heart\n3. Send love to yourself first\n4. Extend love to loved ones\n5. Send love to all beings everywhere"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout> 