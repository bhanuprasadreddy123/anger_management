<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="Back"
            android:textSize="16sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anger Management"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Records"
                android:textSize="14sp"
                android:textColor="#666666" />
        </LinearLayout>

        <Button
            android:id="@+id/btnCalendar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="Cal"
            android:textSize="16sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- This Week's Overview -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This Week's Overview"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4 Incidents recorded"
                            android:textSize="16sp"
                            android:textColor="#333333" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Average intensity: Medium"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="Up"
                        android:textSize="16sp"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <!-- Recent Records -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent Records"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp" />

                <!-- Record 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="#F8F8F8"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Work deadline pressure"
                            android:textSize="16sp"
                            android:textColor="#333333" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Today, 2:30 PM • Office"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="#F44336"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <!-- Record 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="#F8F8F8"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Traffic jam"
                            android:textSize="16sp"
                            android:textColor="#333333" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yesterday, 4:15 PM • Highway"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="#FFC107"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <!-- Record 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="#F8F8F8">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Family discussion"
                            android:textSize="16sp"
                            android:textColor="#333333" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 days ago, 6:45 PM • Home"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="#4CAF50"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>

            <!-- Common Triggers -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Common Triggers"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="#2196F3"
                        android:padding="8dp"
                        android:text="Work Stress"
                        android:textColor="#212121"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="#2196F3"
                        android:padding="8dp"
                        android:text="Traffic"
                        android:textColor="#212121"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="#2196F3"
                        android:padding="8dp"
                        android:text="Family Issues"
                        android:textColor="#212121"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="#2196F3"
                        android:padding="8dp"
                        android:text="Sleep"
                        android:textColor="#212121"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Coping Methods -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coping Methods"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp" />

                <!-- Deep Breathing -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="#F8F8F8"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="DB"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:background="#4CAF50"
                        android:textColor="#FFFFFF" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deep Breathing"
                            android:textSize="16sp"
                            android:textColor="#333333" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12 times • 85% success"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Time-out -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="#F8F8F8"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="TO"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:background="#FF9800"
                        android:textColor="#FFFFFF" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time-out"
                            android:textSize="16sp"
                            android:textColor="#333333" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8 times • 90% success"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Walking -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="#F8F8F8"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="W"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:background="#2196F3"
                        android:textColor="#FFFFFF" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Walking"
                            android:textSize="16sp"
                            android:textColor="#333333" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 times • 75% success"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Meditation -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="#F8F8F8">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="M"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:background="#9C27B0"
                        android:textColor="#FFFFFF" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Meditation"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 times • 80% success"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Add New Record Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#FFFFFF">

        <Button
            android:id="@+id/btnAddRecord"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#2196F3"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="Add New Record"
            android:textColor="#212121"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout> 