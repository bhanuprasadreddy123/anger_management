<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shadow Boxing"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 minutes of boxing to release energy"
                android:textSize="16sp"
                android:textColor="#6B7280"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Timer Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:background="@drawable/card_background"
                android:layout_margin="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🥊 Timer"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tv_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05:00"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:textColor="#3B82F6"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="24dp" />

                <!-- Progress Bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@drawable/progress_bar_bg"
                    android:layout_marginBottom="24dp">

                    <View
                        android:id="@+id/progress_fill"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/progress_bar_fill"
                        android:layout_weight="0" />
                </LinearLayout>

                <!-- Control Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_start_shadowboxing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Boxing"
                        android:textSize="16sp"
                        android:background="@drawable/cta_button_gradient"
                        android:textColor="#FFFFFF"
                        android:padding="16dp"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_pause_shadowboxing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pause"
                        android:textSize="16sp"
                        android:background="@drawable/rounded_button_bg_stroke"
                        android:textColor="#3B82F6"
                        android:padding="16dp"
                        android:visibility="gone"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_reset_shadowboxing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reset"
                        android:textSize="16sp"
                        android:background="@drawable/rounded_button_bg_stroke"
                        android:textColor="#6B7280"
                        android:padding="16dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Introduction Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_margin="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🥊 Introduction"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tv_introduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shadow boxing is a powerful way to channel your frustration into controlled movement. This 5-minute session will help you release energy while building confidence."
                    android:textSize="16sp"
                    android:textColor="#6B7280"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- Instructions Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_button_bg_stroke"
                android:padding="20dp"
                android:layout_margin="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🥊 Instructions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tv_instruction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stand in a boxing stance with feet shoulder-width apart"
                    android:textSize="16sp"
                    android:textColor="#6B7280"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- Benefits Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_margin="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💪 Benefits"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_benefits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Releases built-up energy and frustration\n• Improves coordination and reflexes\n• Builds confidence and self-defense skills\n• Increases cardiovascular fitness\n• Helps channel anger into positive energy"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- Safety Tips -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_button_bg_stroke"
                android:padding="20dp"
                android:layout_margin="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚠️ Safety Tips"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_safety_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Keep your hands up to protect your face\n• Stay in a safe, open area\n• Don't overextend your punches\n• Breathe steadily throughout\n• Stop if you feel any pain or discomfort"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout> 